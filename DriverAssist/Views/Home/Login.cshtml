@{
    ViewBag.Title = "Login Page";
}

<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
<link href="https://fonts.googleapis.com/css?family=Audiowide|Jura:400,600&subset=latin,latin-ext" rel='stylesheet' type="text/css">
<link href="~/fonts/fontello.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <div class="form-login">
                <h4>Please log in</h4>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.TextBox("username",null, new {@class = "form-control input-sm chat-input" })
                    @Html.TextBox("password", null, new { @class = "form-control input-sm chat-input" })
                    <div class="wrapper">
                        <span class="group-btn">
                            <input type="submit" class="btn btn-primary btn-md" value="Login"/>
                        </span>
                    </div>
                }

            </div>

        </div>
    </div>
</div>




