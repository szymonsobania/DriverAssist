@{
    ViewBag.Title = "Contact";
}
@model DriverAssist.Models.UserAccount

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Profile Settings</h4>
                    </div>
                    <div class="content">
                    
                        <form>
                            <div class="row">
                   
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" class="form-control" placeholder="Username" value=@Html.LabelFor(model => model.Username)>
                                       
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" placeholder="Email" value=@Html.LabelFor(model => model.Email)>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>New Password</label>
                                        <input type="text" class="form-control" placeholder="Company" value=@Html.LabelFor(model => model.Password)>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input type="text" class="form-control" placeholder="Last Name" value=@Html.LabelFor(model => model.ConfirmPassword)>
                                    </div>
                                </div>
                            </div>
      

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="sel1">Cars:</label>
                                        <div class="select-cars">
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[0])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[1])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[2])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[3])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[4])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[5])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[6])<br />
                                            <input type="checkbox" />@Html.LabelFor(model => model.Cars[7])<br />
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="../img/background-profile.jpg" alt="..." />
                       
                    </div>
                    <div class="content">
                        <div class="author">
                            <a href="#">
                                <img class="avatar border-gray" src="../img/rafal.jpg" alt="..." />
                                <h4 class="title">
                                    <small>klimajster10</small>
                                </h4>
                            </a>
                        </div>
                        
                        <p class="description text-center">
                            Opel Corsa <br>

                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="https://www.facebook.com/" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>