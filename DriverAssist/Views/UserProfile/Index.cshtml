@using System.Web.UI.WebControls
@model AuthWebApi.Models.UserProfile

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Profile Settings</h4>
                    </div>
                    <div class="content">
                    @using (Html.BeginForm("Save", "UserProfile", FormMethod.Post, new { model = @Model }))
                    {
                        <form>
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.nazwa_uzytk, new {@class = "form-control", placeholder = "Username", width = "200px"})
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="New password">
                                        @Html.TextBoxFor(m => m.imie, new {@class = "form-control", placeholder = "Company"})
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Confirm password">
                                        @Html.TextBoxFor(m => m.nazwisko, new {@class = "form-control", placeholder = "Lastname"})
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="sel1">Cars:</label>

                                    </div>
                                </div>

                            </div>
                            <input type="submit" class="btn btn-info btn-fill pull-right" value="Update Profile">
                            <div class="clearfix"></div>
                        </form>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
